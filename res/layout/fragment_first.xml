<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ececec">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="THANK YOU!" 
        android:textSize="30sp"
       	android:textStyle="italic"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#30393e"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="All premium features are now unlocked. \nWe hope you find them satisfactory" 
        android:textSize="12sp"
       	android:textStyle="italic"/>
    
    <TextView android:id="@+id/cake_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textStyle="italic"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:text="To show our appreciation, we made you a cake! \n Shake your device!" 
        android:textSize="12sp"
       	android:textStyle="italic"/>
        
    <LinearLayout android:id="@+id/not_installed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#30393e"
        >
        
        <TextView
            android:id="@+id/get_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text=" Get Cores Live Wallpaper"
            android:textColor="#ececec"
            android:textSize="24sp"
            android:visibility="invisible" />
 

    </LinearLayout>

</LinearLayout>
